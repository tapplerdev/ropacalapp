import 'package:flutter/material.dart';
import 'package:flutter_map/flutter_map.dart';
import 'package:latlong2/latlong.dart';

/// Diagnostic test page to verify if Mapbox token can fetch tiles via HTTP
/// This uses flutter_map (simple tile renderer) instead of the official Mapbox SDK
class MapboxDiagnosticPage extends StatefulWidget {
  const MapboxDiagnosticPage({super.key});

  @override
  State<MapboxDiagnosticPage> createState() => _MapboxDiagnosticPageState();
}

class _MapboxDiagnosticPageState extends State<MapboxDiagnosticPage> {
  final MapController _mapController = MapController();

  // Test location: New York City
  final LatLng _center = const LatLng(40.7128, -74.0060);

  // Your Mapbox public token
  static const String _accessToken = 'pk.eyJ1IjoiYmlubHl5YWkiLCJhIjoiY21pNzN4bzlhMDVheTJpcHdqd2FtYjhpeSJ9.sQM8WHE2C9zWH0xG107xhw';

  String _status = 'Loading map tiles...';
  bool _tilesLoaded = false;

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: const Text('Mapbox Diagnostic Test'),
        backgroundColor: Colors.blue,
      ),
      body: Column(
        children: [
          // Status banner
          Container(
            width: double.infinity,
            padding: const EdgeInsets.all(16),
            color: _tilesLoaded ? Colors.green.shade100 : Colors.orange.shade100,
            child: Column(
              crossAxisAlignment: CrossAxisAlignment.start,
              children: [
                Text(
                  'Diagnostic Test',
                  style: TextStyle(
                    fontSize: 18,
                    fontWeight: FontWeight.bold,
                    color: _tilesLoaded ? Colors.green.shade900 : Colors.orange.shade900,
                  ),
                ),
                const SizedBox(height: 8),
                Text(
                  _status,
                  style: TextStyle(
                    fontSize: 14,
                    color: _tilesLoaded ? Colors.green.shade800 : Colors.orange.shade800,
                  ),
                ),
                const SizedBox(height: 8),
                Text(
                  'This test uses flutter_map to fetch tiles via HTTP.\nIf tiles load here but not in main map, the issue is with the official Mapbox SDK.',
                  style: TextStyle(
                    fontSize: 12,
                    fontStyle: FontStyle.italic,
                    color: Colors.grey.shade700,
                  ),
                ),
              ],
            ),
          ),

          // Map view
          Expanded(
            child: FlutterMap(
              mapController: _mapController,
              options: MapOptions(
                initialCenter: _center,
                initialZoom: 12.0,
                onMapReady: () {
                  debugPrint('[Diagnostic] Map ready, waiting for tiles...');
                },
              ),
              children: [
                TileLayer(
                  urlTemplate: 'https://api.mapbox.com/styles/v1/mapbox/streets-v12/tiles/{z}/{x}/{y}?access_token=$_accessToken',
                  userAgentPackageName: 'com.example.ropacalapp',
                  tileProvider: NetworkTileProvider(),
                  // Listen for tile loading events
                  tileDisplay: TileDisplay.fadeIn(
                    duration: const Duration(milliseconds: 200),
                  ),
                  errorTileCallback: (tile, error, stackTrace) {
                    debugPrint('[Diagnostic] ❌ Tile load error: $error');
                    debugPrint('[Diagnostic] Tile coords: ${tile.coordinates}');
                    if (mounted) {
                      setState(() {
                        _status = 'ERROR: Failed to load tiles\n$error';
                        _tilesLoaded = false;
                      });
                    }
                  },
                  // This is called when tiles are loaded successfully
                  evictErrorTileStrategy: EvictErrorTileStrategy.none,
                ),

                // Add a marker to show location
                MarkerLayer(
                  markers: [
                    Marker(
                      point: _center,
                      width: 60,
                      height: 60,
                      alignment: Alignment.topCenter,
                      child: const Icon(
                        Icons.location_pin,
                        color: Colors.red,
                        size: 60,
                      ),
                    ),
                  ],
                ),
              ],
            ),
          ),

          // Debug info
          Container(
            width: double.infinity,
            padding: const EdgeInsets.all(16),
            color: Colors.grey.shade200,
            child: Column(
              crossAxisAlignment: CrossAxisAlignment.start,
              children: [
                const Text(
                  'Debug Info:',
                  style: TextStyle(fontWeight: FontWeight.bold),
                ),
                const SizedBox(height: 4),
                Text('Token: ${_accessToken.substring(0, 20)}...'),
                Text('Center: ${_center.latitude}, ${_center.longitude}'),
                Text('Style: mapbox/streets-v12'),
              ],
            ),
          ),
        ],
      ),
      floatingActionButton: FloatingActionButton.extended(
        onPressed: () {
          // Mark as loaded after 2 seconds (heuristic)
          Future.delayed(const Duration(seconds: 2), () {
            if (mounted) {
              setState(() {
                _status = '✅ If you see streets/buildings above, tiles are loading!\nToken is working via HTTP.';
                _tilesLoaded = true;
              });
            }
          });
        },
        label: const Text('Check Status'),
        icon: const Icon(Icons.check),
      ),
    );
  }
}
